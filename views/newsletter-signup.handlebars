 <div class="container outter pt-4">
    <div class="header p-3">
        <h3>Sign up for our newsletter to receive monthly specials!</h3>
    </div> 
    <div class="containter-fluid body-form ">
        <form class="form-horizontal" role = "form" 
            action="/process?form=newsletter" method = "POST">
            <input type = "hidden" name = "_csrf" value="{{csrf}}">
            {{!-- entering NAME as input --}}
            <div class="form-group">
                <label for="fieldName" class=" form-label">
                    Name
                </label>
                <div class="col">
                    <input type="text" class="form-control"
                        id="fieldName" name="name"
                    >
                </div>
            </div>
            {{!-- entering EMAIL as input --}}
            <div class="form-group">
                <label for="fieldEmail" class="form-label">
                    Email
                </label>
                <div class="col">
                    <input type="email" class="form-control" required
                        id="fieldEmail" name="email"
                    >
                    <small id="emailHelp" class="form-text text-muted col-sm-12 col-md-12">
                        We'll never share your email with anyone else.
                    </small>
                </div>
            </div>
            {{!-- Submitting info --}}
            <div>
                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>