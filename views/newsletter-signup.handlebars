{{!-- form with NAME, EMAIL, FREQUENCY OF NEWLETTER --}}

 <div class="container">
     <div class="rowBox"></div>
        
        <div class="col-sm-12">
            <!-- Masthead Heading-->
            <h1 class="formHeading" >Newsletter</h1>
        </div> 
        <br>
        {{!-- <div class="row"></div>  EXTRA SPACE--}}
        
         <div class="col-sm-12">
            {{!-- box  --}}
            <div class="container outter shadow1 rounded-lg pt-4 mt-5 overflow-auto">
                {{!-- <div class="header p-4" style="font-size: 1.1rem; font-weight:bold">
                    <p>Choose also the frequency of newsletter.</p>
                </div> --}}

                <div class="containter-fluid body-form ">
                    <form class="form-horizontal" role = "form" 
                        action="/process?form=newsletterSignup" method = "POST">
                        <input type = "hidden" name = "_csrf" value="{{csrf}}">
                        {{!-- entering NAME as input --}}
                        <div class="form-group">
                            <label for="fieldName" class=" form-label">
                                Name
                            </label>
                            <div class="col">
                                <input type="text" class="form-control"
                                    id="fieldName" name="name" placeholder="Name" required
                                >
                            </div>
                        </div>
                        {{!-- entering EMAIL as input --}}
                        <div class="form-group">
                            <label for="fieldEmail" class="form-label" >
                                Email
                            </label>
                            <div class="col">
                                <input type="email" class="form-control" placeholder="name@example.com" required
                                    id="fieldEmail" name="email"
                                >
                                <small id="emailHelp" class="form-text text-muted col-sm-12 col-md-12">
                                    We'll never share your email with anyone else.
                                </small>
                            </div>
                        </div>

                         {{!-- entering FREQUENCY as input --}}
                        <div class="form-group">
                           
                               <p>Frequency of newsletter</p>
                          
                           {{!-- <label style="padding-right:1rem;">
                                
                                <input type="radio" name="weekly"   required />
                                 Weekly
                            
                                <input type="radio" name="monthly"  required />
                                 Monthly
                            </label> --}}
                            <!-- Default radio -->
                                <div class="form-check">
                                <input
                                    class="form-check-input"
                                    type="radio"
                                    name="flexRadioDefault"
                                    id="flexRadioDefault1"
                                />
                                <label class="form-check-label" for="flexRadioDefault1"> Weekly </label>
                                </div>

                                <!-- Default checked radio -->
                                <div class="form-check">
                                <input
                                    class="form-check-input"
                                    type="radio"
                                    name="flexRadioDefault"
                                    id="flexRadioDefault2"
                                    checked
                                />
                                <label class="form-check-label" for="flexRadioDefault2"> Monthly </label>
                                </div>
                                   
                        </div>


                        {{!-- Submitting info --}}
                        <div class="form-group">
                            <div class="col-sm-offset-2">
                            <button type="submit" class="btn btn-secondary border border-light hvr-bounce-to-right ">
                                Submit
                            </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            {{!-- END OF BOX --}}
        </div>
    </div>
 </div>
 
