
 <div class="container">
    <div class="row"></div>
        
        <div class="col-sm-12">
            <!-- Masthead Heading-->
            <h1 class="formHeading" >The Spot Vacation Photo Contest!</h1>
        </div> 
        <br>
        {{!-- <div class="row"></div>   EXTRA SPACE --}}

        <div class="col-sm-12">
            {{!-- box  --}}
            <div class="container outter shadow1 rounded-lg pt-4 mt-5 overflow-auto">
                <div class="header p-4" style="font-size: 1.1rem; font-weight:bold">
                    <p>Submit a trip photo for a chance to win a trip do Hawaii! </p>
                </div> 
                <div class="containter-fluid body-form ">
                    <form class="form-horizontal" role = "form" 
                        enctype="multipart/form-data"
                        action="/contest/vacation-photo/{year}/{month}" method = "POST"
                    >
                        {{!-- entering NAME as input --}}
                        <div class="form-group">
                            <label for="fieldName" class=" form-label">
                                Name
                            </label>
                            <div class="col">
                                <input type="text" class="form-control"
                                    id="fieldName" name="name" placeholder="Name" required
                                >
                            </div>
                        </div>
                        {{!-- entering EMAIL as input --}}
                        <div class="form-group">
                            <label for="fieldEmail" class="form-label">Email</label>
                            <div class="col">
                                <input type="email" class="form-control" 
                                    id="fieldEmail" name="email" placeholder="name@example.com" required
                                >
                            </div>
                        </div>

                        {{!-- entering VACATION PHOTO --}}
                        <div class="form-group">
                            <label for="fieldPhoto" class="form-label">Vacation photo</label>
                            <div class="col">
                                <input type="file" class="form-control fileInput" required
                                    accept="image/*" id="fieldPhoto" name="photo"
                                >
                            </div>
                        </div>
                        
                        {{!-- Submitting info --}}
                        <div class="form-group">
                            <div class="col-sm-offset-2 center">
                            <button type="submit" class="btn btn-secondary border border-light hvr-bounce-to-right ">
                                Submit
                            </button>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
            {{!-- END OF BOX --}}
        </div>

    </div>
</div>